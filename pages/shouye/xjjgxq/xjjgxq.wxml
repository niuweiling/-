<view class='content flex'>
  <view>
    <image src='../../images/jgxq.png' class='jgxq-icon'></image>
  </view>
  <view class='top-right'>
    <text>{{institutioninfo.company_name}}</text>
    <text>身份认证：{{authestatus[institutioninfo.authe_status - 1]}}</text>
    <text>公司地点：{{institutioninfo.province_name}}</text>
    <text>发布时间：{{institutioninfo.add_time}}</text>
    <text>联系人：{{institutioninfo.linkman}}</text>
    <text>联系电话：{{institutioninfo.linkway}}</text>
  </view>
</view>
<view class='content1'>
  <view class='list'>
    <view class='teo-left fl flex'>
      <view class='hpxx'></view>
      <text class='hpxx-text'>汇票信息</text>
      <view class='city'>{{institutioninfo.bank_type}}</view>
    </view>

  <block wx:if="{{institutioninfo.img_thumb != '0'}}" class="{{isIPhoneX?'padX':''}}">
    <view class='fr ckpm' bindtap='ckpm' data-url='{{institutioninfo.img_thumb}}'>查看票面</view>
  </block>

   




    <view class='clear'></view>
  </view>
  <view class='list flex'>
    <view class='three-list'>
      <text>汇票类型</text>
      <text>{{draft_name[institutioninfo.draft_type - 1]}}</text>
    </view>
    <view class='three-list'>
      <text>票据金额</text>
      <text>{{institutioninfo.money}}</text>
    </view>
    <view class='three-list'>
      <text>剩余天数</text>
      <text>{{institutioninfo.days}}</text>
    </view>
  </view>
  <view class='list flex'>
    <view class='three-list'>
      <text>利率</text>
      <text>{{institutioninfo.interest}}</text>
    </view>
    <view class='three-list'>
      <text>应收金额</text>
      <text>{{institutioninfo.pay_money}}</text>
    </view>
  </view>
</view>
<view class="{{isIPhoneX?'padX':''}} bottom">
  <button class='fr call' bindtap='calling' data-phone='{{institutioninfo.linkway}}'>打电话</button>
</view>
